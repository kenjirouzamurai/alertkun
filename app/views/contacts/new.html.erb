<div class='container'>
  <%= form_with(model: @contact, local: true) do |f| %>
      <h2 class='text-center my-4'>
         お問い合わせフォーム
      </h2>
      <div>
        <% if @contact.errors.any? %>
          <div>
            <ul class="p-0" style="list-style-type: none;"><% @contact.errors.full_messages.each do |message| %>
              <li><p class="mb-1 fs-6 fw-bolder text-danger"><%= message %></p></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div>
          <div>
              <div class="mb-3">
                <%= f.label "お名前" ,class: "form-label" %>
                <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label "メールアドレス" %>
                <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label "お問合せ内容" %>
                <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", class: "form-control" %>
              </div>
              <div>
                <div class=" col-6 mx-auto">
                  <%= f.button type: "submit", class:"btn btn-primary", style:'border-style: none; width: 100%' do %> 
                    送信 
                  <% end %>
                </div>
                <div class="col-6 mx-auto my-3">
                  <%= link_to "トップページにもどる", home_root_path, class:"btn btn-outline-primary btn-sm", style:'display: block' %>
                </div>
              </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
